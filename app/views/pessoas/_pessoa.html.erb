<div id="<%= dom_id pessoa %>">
  <div class="stats stats-vertical bg-base-300 text-primary-content">
    
    <div class="stat">
      <div class="stat-title">Sobrenome</div>
      <div class="stat-value"><%= pessoa.sobrenome %></div>
    </div>
    
    <div class="stat">
      <div class="stat-title">Nome</div>
      <div class="stat-value"><%= pessoa.nome %></div>
    </div>

    <div class="stat">
      <div class="stat-title">Estado</div>
      <div class="stat-value"><%= pessoa.estado_id %></div>
    </div>
    
  </div>
</div>
